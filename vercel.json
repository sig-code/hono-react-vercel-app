{
  "version": 2,
  "buildCommand": "cd apps/web && pnpm build && cd ../../apps/api && pnpm build && mkdir -p ../../api && cp -r dist/* ../../api/",
  "outputDirectory": "apps/web/dist",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "env": {
    "NODEJS_HELPERS": "0",
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
